<%# Project name: MusicalStudentsGroup
 Description: Lets school administrators use a platform to contact donators for instruments,
 Setup a systematic way for students to receive lessons, and for students to form their own
 student music groups.
 Filename: _form.html.erb
 Description: Form field for making new / editing student groups
 NOTE: This was originally generated by the scaffold framework, but i edited functionality
 and styling of this file.
 Last modified on: 4-26-2020 %>

<style>
div.actions {
  display: block;
  margin: auto;
  text-align: center;
}

body {
  background-color: #F3B47D;
}
</style>
<body>
<%= form_with(model: group, local: true) do |form| %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
        <% group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%-# all required fields are listed -%>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, :required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :'Year Level'%>
    <%= form.number_field :yearLevel, :required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :'Number of People Needed' %>
    <%= form.number_field :peopleNeeded, :required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :'Instruments Needed' %>
    <%= form.text_field :instrumentsNeeded, :required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :'Style of Music' %>
    <%= form.select :musicStyle, ['Classical', 'Jazz', 'Latin'], :required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, :required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, :required => 'required' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</body>